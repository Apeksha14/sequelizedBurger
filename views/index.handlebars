<h1>EAT-DA-BURGER!</h1>
<br>
<center><img id="burgerimg" src="/assets/images/burger-flat.png"></center>

<div class="main">

<div class="notdevoured">

<h2>Burgers that are not devoured!</h2>
<br>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        
      {{this.burger_name}}

        <form id="myform"  action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="myButton1" type="submit">DEVOUR!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div class="devoured">

<h2>Burgers that are devoured!</h2>
<br>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        
        {{this.burger_name}}
        <form id="myform"  action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button class="myButton1" type="submit">EAT THE BURGER!</button>
        </form>
        

      </li>
    {{/if}}
  {{/each}}
</ul>

</div>
</div>
<br><br>

<div class="addburgerdiv">
<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
  <br>

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <div class="form-group">
    <input type="hidden" name="devoured" value="0">
  </div>
  <br><br>
  <button class="myButton" type="submit">Add Burger</button>
</form>
</div>

